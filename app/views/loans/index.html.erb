<p id="notice"><%= notice %></p>

<h1>Loans</h1>

<table>
  <thead>
    <tr>
      <th>Principal</th>
      <th>Months</th>
      <th>Years</th>
      <th>Interest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>



    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.principal %></td>
        <td><%= loan.months %></td>
        <td><%= loan.years %></td>
        <td><%= loan.interest %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>


  </tbody>
</table>

<br>

<%= link_to 'New Loan', new_loan_path %>
